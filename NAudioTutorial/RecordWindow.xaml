<Window x:Class="NAudioTutorial.RecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Record" Height="200" Width="290" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Margin="5" x:Name="btnStart" Template="{StaticResource NoiseSoundButton}" Content="START" FontSize="30" Click="btnStart_Click"/>
        <Button Grid.Row="0" Grid.Column="1" Margin="5" x:Name="btnStop" Template="{StaticResource NoiseSoundButton}" Content="STOP" FontSize="30" Click="btnStop_Click"/>
        <Label Grid.Row="1" x:Name="lblTime" Content="00:00:00" FontSize="20" HorizontalAlignment="Center"/>
        
    </Grid>
</Window>
